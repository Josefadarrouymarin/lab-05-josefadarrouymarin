<h1>Users</h1>

<% if can? :create, User %>
  <%= link_to 'â• Add New User', new_user_path, class: 'btn btn-primary mb-3' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Messages Sent</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.messages.count %></td>
        <td><%= link_to 'Show', user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>

        <% if can? :edit, user %>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-secondary' %></td>
        <% else %>
          <td></td>
        <% end %>

        <% if can? :destroy, user %>
          <td>
            <%= button_to 'Delete', user_path(user), method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: 'btn btn-sm btn-danger' %>
          </td>
        <% else %>
          <td></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
